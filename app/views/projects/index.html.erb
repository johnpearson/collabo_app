<div class="heading">
	<%= image_tag('projects.png', :alt => 'projects') %>
</div>
<% @projects.each do |project| %>
<table class="projects">
	<tr>
		<td>
			<ul>	
			<li><h2><b><%= project.name %></b></h2>
				<h3><i>by <% @id = project.user_id %>
						  <% @user = User.find(@id)%>
						  <%= @user.name %></i></h3></li>
			<li><b>Created on: </b><%= (project.created_at.to_formatted_s(
						:long_ordinal)).gsub! /\d\d\:\d\d/, '' %></li>
			<li><b>Content: </b><%= simple_format(project.content) %></li><br />
			<li><b>Attached Files: </b><%= project.inspire_file_name %></li><br />
			<li><%= link_to "Inspirational Files", project.inspire.url %></li><br />
			<% if current_user == @user %>
			<li><%= link_to "Edit", "projects/#{project.id}/edit" %></li>
			<li><%= link_to "Delete", project, :method => :delete,
			 						:confirm => "Are you sure?", 
									:title => "Delete #{project.name}" %></li><br />
			<% end %>
			</ul>
		</td>
	</tr>
</table>
<% end %>

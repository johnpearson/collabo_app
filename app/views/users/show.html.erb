<h1><%= @user.name %></h1>
	<table class="profile round">
		<tr>
			<td><h2>Personal Information</h2><br />
				<ul>
					<li>Name: <%= @user.name %></li><br />
					<li>Email: <%= @user.email %></li><br />
					<li>Location: <%= @user.location %></li><br />
					<li>Hobbies: <%= @user.hobbies %></li><br />
					<li>Artistic Influences: <%= @user.influences %></li><br />
					<li>Inspired by: <%= @user.inspiration %></li><br />
				</ul>
			</td>
			<td><h2>Projects</h2><br />
				<% unless @projects.empty? %>
					<% @projects.each do |project| %>
						<ul>
							<li><%= project.name %></li><br />
						</ul>
					<% end %>
				<% end%>
			</td>
			<td><h2>Links</h2><br />
				<ul>
					<li><%= link_to "Facebook", "#" %></li><br />
					<li><%= link_to "Twitter", "#" %></li><br />
					<li><%= link_to "Website", "#" %></li><br />
					<li><%= link_to "Other", "#" %></li><br />
				</ul>
			</td>
		</tr>
	</table>